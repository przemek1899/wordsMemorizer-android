<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vcf.przemek.wordsmemorizer.AddExpressionActivity">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:id="@+id/group_spinner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Wyrażenie"
        android:ems="10"
        android:layout_below="@+id/group_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:id="@+id/expression_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Tłumaczenie"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/expression_input"
        android:layout_alignEnd="@+id/expression_input"
        android:id="@+id/translation_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Przykład użycia"
        android:ems="10"
        android:layout_below="@+id/translation_input"
        android:layout_alignRight="@+id/translation_input"
        android:layout_alignEnd="@+id/translation_input"
        android:layout_marginTop="59dp"
        android:id="@+id/example_input" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="saveExpression"
        android:id="@+id/save_expression_button" />

</RelativeLayout>
